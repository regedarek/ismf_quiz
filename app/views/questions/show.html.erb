<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @question %>

  </div>
</div>
<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render 'answers/form', answer: @question.answers.new, show_back: false %>
  </div>
</div>
<hr>
<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= link_to 'Edit this question', edit_questionnaire_question_path(@questionnaire, @question), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this question', questionnaire_question_path(@questionnaire, @question), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to questions', questionnaire_questions_path(@questionnaire), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
